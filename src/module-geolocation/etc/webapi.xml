<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route url="/V1/eloom/geolocation/address" method="POST">
		<service class="Eloom\Geolocation\Api\AutocompleteInterface" method="getAddressByPostalCode"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
	
	<route url="/V1/eloom/geolocation/geocode" method="POST">
		<service class="Eloom\Geolocation\Api\GeoIpInterface" method="getLocationByIp"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
	
	<route url="/V1/eloom/geolocation/revgeocode" method="POST">
		<service class="Eloom\Geolocation\Api\HereInterface" method="getAddressByGeocoordinates"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
</routes>